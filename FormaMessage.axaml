<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="600"
        x:Class="Chat.FormaMessage"
		SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" Padding="10" Background="ForestGreen"
        Title="FormaMessage">

	<StackPanel Spacing="5">
		<TextBlock>Type message</TextBlock>
		<TextBox Name="message"></TextBox>
		
		<StackPanel Orientation="Horizontal"
                    Spacing="5"
                    Margin="0, 5, 5, 5">
			
			<Button Width="100"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
					Click="ButtonAddMess_OnClick">
				Add
			</Button>
			<Button Width="100"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
					Click="ButtonClear_OnClick"
                    >
				Clear
			</Button>
			<Button Width="100"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
					Click="ButtonShow_OnClick">
				ShowAll
			</Button>
		</StackPanel>
	</StackPanel>
</Window>
