<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="400"
        x:Class="Chat.Update"
		SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" Padding="10" Background="ForestGreen"
       
        Title="Update">
	<StackPanel Spacing="5">
		<TextBlock>Type updated message</TextBlock>
		<TextBox Name="message"></TextBox>

		<StackPanel Orientation="Horizontal"
                    Spacing="5"
                    Margin="0, 5, 5, 5">

			<Button Width="100"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
					Click="ButtonUpdate_OnClick"
					>
				Update
			</Button>
			<Button Width="100"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
					Click="ButtonClear_OnClick"
                    >
				Clear
			</Button>
			
		</StackPanel>
		<TextBlock Name="mes"></TextBlock>
	</StackPanel>
	
</Window>
